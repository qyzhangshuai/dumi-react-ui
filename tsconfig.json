{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "dumi-react-ui": ["src/index.ts"],
      "dumi-react-ui/esm/*": ["components/*"],
      "dumi-react-ui/lib/*": ["components/*"],
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["types", "node_modules", "lib", "esm"]
}
